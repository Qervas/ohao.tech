---
export interface Props {
  src: string;
  alt: string;
  class?: string;
  width?: number;
  height?: number;
  loading?: 'lazy' | 'eager';
}

const {
  src,
  alt,
  class: className = '',
  width,
  height,
  loading = 'lazy'
} = Astro.props;

// Ensure absolute path
const imageSrc = src.startsWith('/') ? src : `/${src}`;
---

<img
  src={imageSrc}
  alt={alt}
  class={className}
  width={width}
  height={height}
  loading={loading}
  decoding="async"
  onload="console.log('✅ Image loaded:', this.src)"
  onerror="console.error('❌ Image failed:', this.src); this.style.display='none';"
/>

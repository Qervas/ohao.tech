---
export interface Props {
  src: string;
  alt: string;
  class?: string;
  style?: string;
  width?: string | number;
  height?: string | number;
  loading?: 'lazy' | 'eager';
}

const {
  src,
  alt,
  class: className = '',
  style = '',
  width,
  height,
  loading = 'lazy'
} = Astro.props;
---

<img
  src={src}
  alt={alt}
  class={className}
  style={style}
  width={width}
  height={height}
  loading={loading}
/>

---
import Layout from '../../layouts/Layout.astro';
import Icon from '../../components/Icon.astro';

const skills = [
  { name: 'C++', level: 95, icon: 'Code2' },
  { name: 'Vulkan/OpenGL', level: 90, icon: 'Monitor' },
  { name: 'Neural Rendering', level: 85, icon: 'Brain' },
  { name: 'CUDA', level: 85, icon: 'Zap' },
  { name: 'Python/PyTorch', level: 80, icon: 'PythonLogo' },
  { name: 'Physics Simulation', level: 85, icon: 'Activity' },
  { name: 'PBR/Ray Tracing', level: 90, icon: 'Sun' },
  { name: 'GLSL', level: 88, icon: 'Palette' },
];

const education = [
  {
    degree: 'MSc Computer Science',
    specialization: 'Computer Graphics & Visualization',
    school: 'Linköping University',
    location: 'Linköping, Sweden',
    period: 'Sep 2023 - Jun 2025',
    description: 'Specialized in real-time rendering, global illumination, and neural rendering (NeRF, 3D Gaussian Splatting) for gaming, with studies in AI/ML (multi-agent systems, deep learning, generative AI) and software engineering.',
    current: true
  },
  {
    degree: 'B.Eng Computer Science and Technology',
    school: 'Beijing Information Science and Technology University',
    location: 'Beijing, China',
    period: 'Sep 2019 - Jun 2023',
    description: 'Published a paper on real-time movement classification using OpenPose and STGCN (2021), achieving 80% accuracy in skiing action analysis.',
    current: false
  }
];

const experience = [
  {
    role: 'C++ Development Engineer Intern',
    company: 'Beijing Guoyao Xintiandi Information Technology Co., Ltd.',
    location: 'Beijing, China',
    period: 'Aug 2022 - Sep 2022',
    description: 'Enhanced UI and rendering for a 3D visualization tool using Qt and OpenGL, achieving 40% faster user interaction. Developed a custom protocol with socket programming, boosting data transmission efficiency by 50%.',
    technologies: ['C++', 'Qt', 'OpenGL', 'Socket Programming']
  },
  {
    role: 'Software Engineer Intern',
    company: 'GienTech Technology Co., Ltd.',
    location: 'Beijing, China',
    period: 'Jul 2021 - Aug 2021',
    description: 'Developed an online shopping platform for farmers on WeChat Mini-Program using Spring Cloud microservices, optimizing database queries for active users.',
    technologies: ['Spring Cloud', 'WeChat Mini-Program', 'Microservices', 'Database Optimization']
  }
];

const currentResearch = {
  title: 'Neural Scene Representation & Rendering',
  status: 'Master\'s Thesis (Feb 2025 - Present)',
  description: 'Building a high-quality dataset for neural rendering and comparing mainstream algorithms to achieve state-of-the-art results. Developing software for dataset capture and optimizing neural rendering algorithms including NeRF and 3D Gaussian Splatting.',
  technologies: ['NeRF', '3D Gaussian Splatting', 'PyTorch', 'CUDA', 'Computer Vision']
};

const publications = [
  {
    title: 'Real-time Movement Classification using OpenPose and STGCN',
    year: '2021',
    description: 'Co-authored paper on skiing action analysis achieving 80% accuracy',
    citations: '1 citation from Google Scholar'
  }
];
---

<Layout title="About - Shaoxuan Yin">
  <!-- Hero Section -->
  <section class="py-12 md:py-20">
    <div class="container">
      <div class="grid md:grid-cols-12 gap-8 items-start">
        <div class="md:col-span-8">
          <div class="inline-flex items-center px-3 py-1 rounded-full bg-primary/10 text-primary text-sm font-medium mb-6">
            <span class="relative flex h-2 w-2 mr-2">
              <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-primary opacity-75"></span>
              <span class="relative inline-flex rounded-full h-2 w-2 bg-primary"></span>
            </span>
            Currently pursuing Master's Thesis
          </div>

          <h1 class="text-3xl md:text-4xl font-bold mb-6">
            <span class="text-primary">Shaoxuan Yin</span><br>
            Neural Rendering & Real-Time Graphics Engineer
          </h1>

          <div class="prose dark:prose-invert max-w-none mb-8 space-y-4 text-muted-foreground">
            <p class="text-lg">
              I'm a computer graphics engineer specializing in neural rendering and real-time graphics programming. Currently pursuing my Master's degree at Linköping University, working on both AI and graphics research.
            </p>
            <p>
              My expertise spans from low-level graphics programming with Vulkan and CUDA to high-level AI research with neural rendering algorithms like NeRF and 3D Gaussian Splatting. I'm passionate about the intersection of traditional computer graphics and modern AI techniques.
            </p>
            <p>
              With a strong foundation in C++ systems programming and graphics APIs, I've developed everything from custom physics engines to real-time path tracers. My goal is to push the boundaries of what's possible in real-time rendering and neural graphics.
            </p>
          </div>

          <div class="flex flex-wrap gap-4">
            <a
              href="mailto:shayi783@student.liu.se"
              class="inline-flex items-center px-6 py-3 rounded-full bg-primary text-primary-foreground font-medium hover:bg-primary/90 transition-colors"
            >
              <Icon name="Mail" className="mr-2 w-4 h-4" />
              Contact Me
            </a>
            <a
              href="https://github.com/Qervas"
              target="_blank"
              class="inline-flex items-center px-6 py-3 rounded-full border border-border font-medium hover:bg-accent/50 transition-colors"
            >
              <Icon name="Github" className="mr-2 w-4 h-4" />
              GitHub
            </a>
            <a
              href="https://linkedin.com/in/shaoxuan-yin"
              target="_blank"
              class="inline-flex items-center px-6 py-3 rounded-full border border-border font-medium hover:bg-accent/50 transition-colors"
            >
              <Icon name="Linkedin" className="mr-2 w-4 h-4" />
              LinkedIn
            </a>
          </div>
        </div>

        <div class="md:col-span-4">
          <div class="bg-gradient-to-br from-primary/5 to-primary/10 p-6 rounded-2xl border border-border/50">
            <h3 class="font-semibold mb-4 flex items-center">
              <Icon name="GraduationCap" className="mr-2 w-5 h-5 text-primary" />
              Current Research
            </h3>
            <div class="space-y-3">
              <h4 class="font-medium text-primary">{currentResearch.title}</h4>
              <p class="text-sm text-muted-foreground">{currentResearch.status}</p>
              <p class="text-sm">{currentResearch.description}</p>
              <div class="flex flex-wrap gap-2">
                {currentResearch.technologies.map(tech => (
                  <span class="text-xs px-2 py-1 rounded-full bg-accent text-muted-foreground">
                    {tech}
                  </span>
                ))}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Skills Section -->
  <section class="py-16 bg-accent/20">
    <div class="container">
      <div class="max-w-3xl mx-auto text-center mb-12">
        <h2 class="text-2xl font-bold mb-4">Technical Expertise</h2>
        <p class="text-muted-foreground">
          Core technologies and specializations I work with in graphics programming and neural rendering.
        </p>
      </div>

      <div class="grid md:grid-cols-3 lg:grid-cols-4 gap-4 max-w-6xl mx-auto">
        {skills.map((skill) => (
          <div class="bg-background p-4 rounded-lg border border-border/50 hover:border-primary/30 transition-colors">
            <div class="flex items-center mb-3">
              <div class="p-1.5 rounded-md bg-primary/10 text-primary mr-3">
                <Icon name={skill.icon} className="w-4 h-4" />
              </div>
              <div class="flex-1">
                <h3 class="font-medium text-sm">{skill.name}</h3>
                <span class="text-xs text-muted-foreground">{skill.level}%</span>
              </div>
            </div>
            <div class="w-full bg-muted rounded-full h-1.5">
              <div
                class="bg-primary h-1.5 rounded-full transition-all duration-300"
                style={`width: ${skill.level}%`}
              ></div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Education Section -->
  <section class="py-16">
    <div class="container">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-2xl font-bold mb-12 text-center">Education</h2>

        <div class="space-y-8">
          {education.map((edu) => (
            <div class="relative p-6 rounded-xl border border-border/50 bg-background hover:border-primary/30 transition-colors">
              {edu.current && (
                <div class="absolute -top-3 left-6">
                  <span class="px-3 py-1 bg-primary text-primary-foreground text-xs rounded-full font-medium">
                    Current
                  </span>
                </div>
              )}
              <div class="grid md:grid-cols-3 gap-4">
                <div class="md:col-span-2">
                  <h3 class="text-xl font-bold mb-2">{edu.degree}</h3>
                  {edu.specialization && (
                    <p class="text-primary font-medium mb-2">{edu.specialization}</p>
                  )}
                  <p class="text-muted-foreground mb-3">{edu.school} • {edu.location}</p>
                  <p class="text-sm">{edu.description}</p>
                </div>
                <div class="text-right">
                  <span class="inline-flex items-center px-3 py-1 rounded-full bg-accent text-sm font-medium">
                    {edu.period}
                  </span>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Experience Section -->
  <section class="py-16 bg-accent/20">
    <div class="container">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-2xl font-bold mb-12 text-center">Professional Experience</h2>

        <div class="space-y-8">
          {experience.map((job) => (
            <div class="p-6 rounded-xl border border-border/50 bg-background hover:border-primary/30 transition-colors">
              <div class="grid md:grid-cols-3 gap-4">
                <div class="md:col-span-2">
                  <h3 class="text-xl font-bold mb-2">{job.role}</h3>
                  <p class="text-primary font-medium mb-2">{job.company}</p>
                  <p class="text-muted-foreground mb-3">{job.location}</p>
                  <p class="text-sm mb-4">{job.description}</p>
                  <div class="flex flex-wrap gap-2">
                    {job.technologies.map(tech => (
                      <span class="text-xs px-2 py-1 rounded-full bg-accent text-muted-foreground">
                        {tech}
                      </span>
                    ))}
                  </div>
                </div>
                <div class="text-right">
                  <span class="inline-flex items-center px-3 py-1 rounded-full bg-primary/10 text-primary text-sm font-medium">
                    {job.period}
                  </span>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Publications & Achievements -->
  <section class="py-16">
    <div class="container">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-2xl font-bold mb-12 text-center">Publications & Research</h2>

        <div class="grid md:grid-cols-2 gap-8">
          <div>
            <h3 class="text-lg font-semibold mb-4 flex items-center">
              <Icon name="FileText" className="mr-2 w-5 h-5 text-primary" />
              Publications
            </h3>
            <div class="space-y-4">
              {publications.map((pub) => (
                <div class="p-4 rounded-lg border border-border/50">
                  <h4 class="font-medium mb-2">{pub.title}</h4>
                  <p class="text-sm text-muted-foreground mb-2">{pub.year}</p>
                  <p class="text-sm">{pub.description}</p>
                  <p class="text-xs text-primary mt-2">{pub.citations}</p>
                </div>
              ))}
            </div>
          </div>

          <div>
            <h3 class="text-lg font-semibold mb-4 flex items-center">
              <Icon name="Award" className="mr-2 w-5 h-5 text-primary" />
              Key Achievements
            </h3>
            <div class="space-y-4">
              <div class="p-4 rounded-lg border border-border/50">
                <h4 class="font-medium">Neural Rendering Research</h4>
                <p class="text-sm text-muted-foreground">Leading research in NeRF and 3D Gaussian Splatting optimization</p>
              </div>
              <div class="p-4 rounded-lg border border-border/50">
                <h4 class="font-medium">40% Performance Improvement</h4>
                <p class="text-sm text-muted-foreground">Optimized 3D visualization tools using OpenGL</p>
              </div>
              <div class="p-4 rounded-lg border border-border/50">
                <h4 class="font-medium">Published Research</h4>
                <p class="text-sm text-muted-foreground">Co-authored paper with 80% accuracy in movement classification</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact CTA -->
  <section class="py-16 bg-gradient-to-br from-primary/5 to-primary/10">
    <div class="container text-center">
      <h2 class="text-2xl font-bold mb-4">Interested in Collaboration?</h2>
      <p class="text-muted-foreground max-w-2xl mx-auto mb-8">
        I'm open to research collaborations, industry opportunities in neural rendering and graphics programming, or discussing cutting-edge graphics techniques.
      </p>
      <div class="flex flex-col sm:flex-row justify-center gap-4">
        <a
          href="mailto:shayi783@student.liu.se"
          class="inline-flex items-center px-6 py-3 rounded-full bg-primary text-primary-foreground font-medium hover:bg-primary/90 transition-colors"
        >
          <Icon name="Mail" className="mr-2 w-4 h-4" />
          Send Email
        </a>
        <a
          href="/projects"
          class="inline-flex items-center px-6 py-3 rounded-full border border-border font-medium hover:bg-accent/50 transition-colors"
        >
          <Icon name="Eye" className="mr-2 w-4 h-4" />
          View My Work
        </a>
      </div>
    </div>
  </section>
</Layout>

          <div>Current URL: <span id="current-url"></span></div>
          <div>User Agent: <span id="user-agent"></span></div>
          <div>Timestamp: <span id="timestamp"></span></div>
          <div class="mt-2">
            <button onclick="reloadAllImages()" class="bg-blue-500 text-white px-3 py-1 rounded hover:bg-blue-600">
              ğŸ”„ Reload All Images
            </button>
            <button onclick="clearCache()" class="bg-red-500 text-white px-3 py-1 rounded hover:bg-red-600 ml-2">
              ğŸ—‘ï¸ Clear Cache & Reload
            </button>
          </div>
        </div>
      </section>
    </div>
  </div>

  <script is:inline>
    // Initialize debug info
    document.addEventListener('DOMContentLoaded', () => {
      document.getElementById('current-url').textContent = window.location.href;
      document.getElementById('user-agent').textContent = navigator.userAgent;
      document.getElementById('timestamp').textContent = new Date().toISOString();

      console.log('ğŸ§ª Direct Image Test Page Loaded');
      console.log('ğŸ“ URL:', window.location.href);

      // Count and log images after a delay
      setTimeout(() => {
        const images = document.querySelectorAll('img');
        let loaded = 0, failed = 0, loading = 0;

        images.forEach(img => {
          if (img.complete) {
            if (img.naturalWidth > 0) {
              loaded++;
            } else {
              failed++;
            }
          } else {
            loading++;
          }
        });

        console.log(`ğŸ“Š Image Status: ${loaded} loaded, ${failed} failed, ${loading} still loading`);

        // Log each image status
        images.forEach((img, index) => {
          const status = img.complete ? (img.naturalWidth > 0 ? 'âœ…' : 'âŒ') : 'â³';
          console.log(`${status} Image ${index + 1}: ${img.src}`);
        });
      }, 3000);
    });

    // Helper functions
    function reloadAllImages() {
      console.log('ğŸ”„ Reloading all images...');
      const images = document.querySelectorAll('img');
      images.forEach(img => {
        const src = img.src;
        img.src = '';
        img.src = src + '?reload=' + Date.now();
      });
    }

    function clearCache() {
      console.log('ğŸ—‘ï¸ Clearing cache and reloading...');
      if ('caches' in window) {
        caches.keys().then(names => {
          names.forEach(name => {
            caches.delete(name);
          });
        }).then(() => {
          window.location.reload(true);
        });
      } else {
        window.location.reload(true);
      }
    }
  </script>
</Layout>
